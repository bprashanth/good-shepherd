{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "mismatches": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["missing_features", "extra_features", "count_mismatch", "unmatched_variables", "features_without_variables"]
          },
          "severity": {
            "type": "string",
            "enum": ["error", "warning", "info"]
          },
          "feature_type": {"type": ["string", "null"]},
          "protocol_expected": {"type": ["string", "number", "null"]},
          "kml_found": {"type": ["string", "number", "null"]},
          "message": {"type": "string"},
          "recommendation": {"type": "string"}
        },
        "required": ["type", "severity", "message", "recommendation"]
      }
    }
  },
  "required": ["mismatches"]
}

